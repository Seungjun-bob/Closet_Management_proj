<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        style="@style/title_font_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"

            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/id_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:singleLine = "true"
            android:lines = "1"
            />

        <Button
            style="@style/content_font_style"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"
            android:id="@+id/check_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복확인"
            android:textSize="10sp"
            android:minHeight="0dp"
            android:minWidth="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="PW"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/pw_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:singleLine = "true"
            android:lines = "1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="PW확인"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/pwcheck_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:singleLine = "true"
            android:lines = "1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/name_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:singleLine = "true"
            android:lines = "1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/birthday_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="8"
            android:hint="ex. 19990101"
            android:singleLine = "true"
            android:lines = "1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="73dp"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <Spinner
            style="@style/SpinnerItem"
            android:popupBackground="@color/white"
            android:id="@+id/gender_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/gender_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        style="@style/content_font_style"
        android:textColor="@color/white"
        android:background="@drawable/login_custom_btn"
        android:id="@+id/submit_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_gravity="center"/>
    <Button
        style="@style/content_font_style"
        android:textColor="@color/white"
        android:background="@drawable/custom_btn"
        android:id="@+id/back_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="돌아가기"
        android:layout_gravity="center"/>

</LinearLayout>